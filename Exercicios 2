//Praticando 2

//Exercicio 2
interface Cliente {
  nome: string;
  idade: number;
  vip: boolean;
};

let cliente1: Cliente = {
  nome: "João",
  idade: 20,
  vip: false,
};

console.log(`${cliente1.nome} tem ${cliente1.idaide} e possui acesso ao vip? ${cliente1.vip}`);

