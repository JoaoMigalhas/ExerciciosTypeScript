//Criação de um objeto:
let aluno = {
  nome: "João",
  nota: "7.0",
  faltas: "0",
};
console.log(aluno.nota); // 7
console.log(aluno.nome); // João
console.log(aluno.faltas); // 0

-------------------------------------------
//Exercicio de criação de tipo e interface

//Criação de tipo:
type Aluno = {
    nome: string;
    falta: number;
    nota: number;
};

let aluno1: Aluno = {
        nome: "Joao",
        falta: 2,
        nota: 8.6,
};

console.log(aluno1.nota); // 8.6

-------------------------------------------
//Criação de interface:
interface Aluno {
    nome: string;
    falta: number;
    nota: number;
};

let aluno2: Aluno = {
        nome: "Miguel",
        falta: 2,
        nota: 9.5,
};

console.log(aluno2.nota); // 9.5

-------------------------------------------
//Praticando 1

//Exercicio 1
type Produto = {
  nome: string;
  preco: number;
  emEstoque: boolean;
};

let produto1: Produto = {
  nome: "Notebook",
  preco: 3500,
  emEstoque: true,
};

console.log(`${produto1.nome} custa R$ ${produto1.preco} e esta em estoque? ${produto1.emEstoque}´);

