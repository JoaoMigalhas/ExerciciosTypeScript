//Praticando 3

//Exercicio 3
type Carro = {
  marca: string;
  modelo: string;
  ano: number;
};

interface Moto {
  marca: string;
  cilindradas: number;
  ano: number;
};

let carro1: Carro = {
  marca: "Toyota",
  modelo: "Corolla",
  ano: 2022,
}

let moto1: Moto = {
  marca: "Honda",
  cilindradas: 160,
  ano: 2023,
}

console.log(`Carro: ${carro1.marca} ${carro1.modelo}, Ano: ${carro1.ano}`);
console.log(`Moto: ${moto1.marca} ${moto1.cilindradas}cc, Ano: ${moto1.ano}`);

-------------------------------------------
//Arquivo txt
//Exemplo 1

import * as fs from "fs"; //importa o modulo fs do node usado para manipular arquivos
import * as path from "path"; //importa o modulo path do node monta caminhos de uma forma mais segura

//Caminho do Arquivo
const filePath = path.join(__dirname, "saida.txt");

//Conteudo que vai ter no arquivo
const texto = "Ola, Este é um arquivo criado em typescript";

//Escrevendo no arquivo(sobrescrever)
fs.writeFileSync(filePath, texto, "utf-8");

console.log("ARQUIVO TXT CIRADO EM: ", filePath);

-------------------------------------------
//Agora com csv
//Exercicio 2

import * as fs from "fs"; //importa o modulo fs do node usado para manipular arquivos, mesmo que foi usado para o arquivo txt
import * as path from "path"; //importa o modulo path do node monta caminhos de uma forma mais segura, tambem o mesmo usado anteriormente em txt

//Caminho do arquivo
const csvPath = path.join(__dirname, "saida.csv");

//Cabeçalho CSV
const header = "Nome;Idade/Cidade/n"

//Dados que irao estar no arquivo
const linhas + [
  "Luana;22;Jundiai",
  "Miguel;21;Varzea Paulista",
  "Henrique;19;Campinas",
].join("/n");

//Monta o conteudo
const conteudo = header + linhas;

//Escrever no arquivo
fs.writeFileSync(csvPath, conteudo, "utf-8");

console.log("Arquivo CSV criado em: ", csvPath);

  







  





